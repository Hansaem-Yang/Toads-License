<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="nations">  
    <select id="status">
        select nation_iso2
             , nation_iso3
             , nation_ename
             , nation_kname
             , nation_code
          from nations
        <if test="language == 'KR'">
         order by nation_kname
        </if>
        <if test="language == 'EN'">
         order by nation_ename
        </if>;
    </select>
</mapper>