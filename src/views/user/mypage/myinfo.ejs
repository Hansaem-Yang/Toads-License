                                    <th width="120px" class="right-align" ><%=t('username')%></th>
                                    <td width="720px" class="cell_user_name"></td>
                                </tr>
                                <tr>
                                    <th class="right-align"><%=t('email')%></th>
                                    <td class="cell_email"></td>
                                </tr>
