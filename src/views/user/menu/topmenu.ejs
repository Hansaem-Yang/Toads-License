<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="/public/css/styles.css">
        <!--
        <link rel="stylesheet" media="screen and (max-width: 600px)" href="/public/css/styles-small.css">
        <link rel="stylesheet" media="screen and (min-width: 601px) and (max-width: 1024px)" href="/public/css/styles-medium.css">
        <link rel="stylesheet" media="screen and (min-width: 1025px) and (max-width: 2560px)" href="/public/css/styles-large.css">
        -->
        <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
        <script>
            $(document).ready(function() {
                // 로그아웃
                $(".mypage").click(function(event) {
                    event.preventDefault();

                    $.ajax({
                        url: "../session",
                        method: "POST",
                        success: function (data) {
                            switch (data) {
                                case "SESSION":
                                    window.parent.location.href = "./mypage";
                                    break;
                                case "NO SESSION":
                                    alert("<%=t('message(session expires)')%>");
                                    window.parent.location.href = "./login";
                                    break;
                            }
                        },
                        error: function (xhr, status, error) {
                            alert("<%=t('message(request failed)')%>");
                            window.location.href = "./login";
                        },
                    });
                });

                // 로그아웃
                $(".logout").click(function(event) {
                    event.preventDefault();

                    var userId = "<%= session.user.userId %>";
                    // Ajax를 이용한 데이터 전송
                    $.ajax({
                        url: "../logout",
                        method: "POST", 
                        data: {
                            userId: userId,
                        },
                        success: function (res) {
                            switch (res) {
                                case "SUCCESS":
                                    alert("<%=t('message(logout success)')%>");

                                    window.parent.location.href = "./login";
                                    break;
                            }
                        },
                        error: function (xhr, status, error) {
                            alert("<%=t('message(request failed)')%>");
                        },
                    });
                });

                $('.logo').click(function(event) {
                    event.preventDefault();

                    $.ajax({
                        url: "../session",
                        method: "POST",
                        success: function (data) {
                            switch (data) {
                                case "SESSION":
                                    window.parent.location.href = "./main";
                                    break;
                                case "NO SESSION":
                                    alert("<%=t('message(session expires)')%>");
                                    window.parent.location.href = "./login";
                                    break;
                            }
                        },
                        error: function (xhr, status, error) {
                            alert("<%=t('message(request failed)')%>");
                            window.location.href = "./login";
                        },
                    });
                });
                
                $(".ko").click(function(event) {
                    window.parent.location.href = "./main?lng=ko";
                });
                
                $(".en").click(function(event) {
                    window.parent.location.href = "./main?lng=en";
                });
                
                $(".cn").click(function(event) {
                    window.parent.location.href = "./main?lng=cn";
                });
            });
        </script>
    </head>
    <body>
        <form id="topmenu-form">
            <div class="topmenu">
                <div class="shortcuts">
                    <nav>
                        <a href="#" class="ko"><%=t('ko')%></a>
                        <a href="#" class="en"><%=t('en')%></a>
                        <a href="#" class="cn"><%=t('ch')%></a>&nbsp;
                        <%= session.user.companyName %>&nbsp;<%= session.user.userName %>&nbsp;
                        <a href="#" class="mypage"><%=t('mypage')%></a>
                        <a href="#" class="logout"><%=t('logout')%></a>
                    <nav>
                </div>
                <div class="logo"/>
            </div>
        </form>
    </body>
</html>
